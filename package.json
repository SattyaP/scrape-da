{
  "name": "alsav-da-checker",
  "productName": "Alsav DA Checker",
  "version": "1.0.0",
  "description": "Alsav DA Checker is a tool to check the DA of a domain.",
  "main": "src/index.js",
  "scripts": {
    "start": "npx electronmon .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "deploy": "cross-env NODE_ENV=production electron-builder -p always",
    "build": "cross-env NODE_ENV=production npx electron-builder build",
    "dev": "node dev.js"
  },
  "keywords": [],
  "author": {
    "name": "Alsav Systems"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.7",
    "electronmon": "^2.0.2",
    "fs": "^0.0.1-security",
    "puppeteer": "^21.6.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "rollbar": "^2.26.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "cross-env": "^7.0.3",
    "electron": "27.0.0",
    "electron-builder": "^24.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SattyaP/scrape-da"
  },
  "electronmon": {
    "patterns": [
      "!src/bot/data/**"
    ]
  },
  "build": {
    "appId": "org.alsav.systems",
    "productName": "Alsav DA Checker",
    "compression": "maximum",
    "copyright": "Copyrights 2024 Alsav Systems",
    "publish": {
      "provider": "github",
      "owner": "SattyaP",
      "repo": "scrape-da",
      "private": false
    },
    "win": {
      "target": "nsis",
      "icon": "./src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "extraFiles": [
      "src/bot/extension/adblock",
      "src/bot/extension/buster",
      "src/bot/data/"
    ]
  }
}
